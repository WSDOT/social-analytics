<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:style>


        .tabs {
            width: 50%;
        }

        .block{
            display: block;
            padding: 20px;
        }

        .loader {
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 25px;
        }

    </ui:style>

    <m:MaterialRow ui:field="tabs" styleName="{style.tabs}">
        <m:MaterialColumn grid="s12">
            <m:MaterialTab ui:field="tab" backgroundColor="teal lighten-2" indicatorColor="yellow">
                <m:MaterialTabItem waves="LIGHT" grid="s4">
                    <m:MaterialLink ui:field="tweetsTab" text="Tweets" href="#tab1" textColor="white"/>
                </m:MaterialTabItem>
                <m:MaterialTabItem waves="LIGHT" grid="s4">
                    <m:MaterialLink ui:field="followersTab" text="Followers" href="#tab2" textColor="white"/>
                </m:MaterialTabItem>
            </m:MaterialTab>
        </m:MaterialColumn>

        <m:MaterialColumn  m:id="tab1" grid="s12">

            <m:MaterialColumn grid="s12 m6 l4">
                <m:MaterialCard>
                    <m:MaterialCardTitle text="Tweets And Mentions" textColor="black" addStyleNames="{style.block}"/>
                    <m:MaterialPreLoader ui:field="tweetsLoader" size="BIG" addStyleNames="{style.loader}">
                        <m:MaterialSpinner color="blue-only"/>
                    </m:MaterialPreLoader>
                    <m:MaterialCardContent ui:field="tweetContent" addStyleNames="no-padding"/>
                    <m:MaterialCardAction ui:field="tweetLabel"/>


                </m:MaterialCard>
            </m:MaterialColumn>


        </m:MaterialColumn>
        <m:MaterialColumn  m:id="tab2" grid="s12">


            <m:MaterialColumn grid="s12 m6 l4">
                <m:MaterialCard>
                    <m:MaterialCardTitle text="Followers" textColor="black" addStyleNames="{style.block}"/>
                    <m:MaterialPreLoader ui:field="followersLoader" size="BIG" addStyleNames="{style.loader}">
                        <m:MaterialSpinner color="blue-only"/>
                    </m:MaterialPreLoader>
                    <m:MaterialCardContent ui:field="followerContent" addStyleNames="no-padding"/>
                    <m:MaterialCardAction ui:field="followerLabel"/>
                </m:MaterialCard>
            </m:MaterialColumn>




        </m:MaterialColumn>
    </m:MaterialRow>

</ui:UiBinder>