<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:my="urn:import:gov.wa.wsdot.apps.analytics.client.view">

    <ui:with field="res" type="gov.wa.wsdot.apps.analytics.client.resources.Resources" />

    <g:HTMLPanel>

        <m:MaterialNavBar backgroundColor="blue" width="100%">
            <m:MaterialNavBrand href="http://wwwi.wsdot.wa.gov" textColor="white" float="LEFT">WSDOT Social Analytics</m:MaterialNavBrand>
            <m:MaterialNavSection float="RIGHT">
                <m:MaterialLink ui:field="btnSearch" iconType="SEARCH" iconColor="white" float="RIGHT"/>
            </m:MaterialNavSection>
        </m:MaterialNavBar>

        <g:HTMLPanel styleName="{res.css.wrapper}">

            <div class="{res.css.main}">

                <table style="width:100%;margin-top:15px;">
                    <tr>
                        <td valign="top">
                            <div style="background-color:#f2f2f2;width:500px;padding:3px 5px;"><b>Date Range</b></div>

                            <div style="float:left; padding-right: 10px">
                                <m:MaterialDatePicker ui:field="dpStart" placeholder="Start Date"/>
                            </div>
                            <div style="float:left;">
                                <m:MaterialDatePicker ui:field="dpEnd" placeholder="End Date"/>
                            </div>
                            <div style="float:left;  padding: 25px">
                                <m:MaterialButton ui:field="submitDateButton" text="Submit" waves="LIGHT" backgroundColor="blue" textColor="white"/>
                            </div>
                        </td>



                        <td valign="top">



                        </td>
                    </tr>
                </table>

            </div>
            <div class="{res.css.clearLeft}"></div>
        </g:HTMLPanel>

    </g:HTMLPanel>

</ui:UiBinder>