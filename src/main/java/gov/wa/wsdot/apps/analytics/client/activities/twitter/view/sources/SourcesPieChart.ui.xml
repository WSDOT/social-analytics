<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui">
    <ui:style>


        .overflow{
        overflow: hidden;
        }

        .block{
        display: block;
        padding: 20px;
        }

        .loader {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 25px;
        }
    </ui:style>
    <m:MaterialRow ui:field="tabs">
    <m:MaterialColumn grid="s12">
        <m:MaterialCard>
            <m:MaterialCardTitle text="Mention Sources" textColor="black" addStyleNames="{style.block}"/>
            <m:MaterialPreLoader ui:field="sourcesLoader" size="BIG" addStyleNames="{style.loader}">
                <m:MaterialSpinner color="blue-only"/>
            </m:MaterialPreLoader>
            <m:MaterialCardContent ui:field="cardContent" addStyleNames="no-padding {style.overflow}"/>

            <m:MaterialCardAction>
                <m:MaterialLabel text="Tweets are primarily posted from the Twitter Web site, however, they may also be posted from third-party applications. When Tweets come from a third-party application, the name of the source is included in the data feed."/>
            </m:MaterialCardAction>
        </m:MaterialCard>
    </m:MaterialColumn>
    </m:MaterialRow>

</ui:UiBinder>