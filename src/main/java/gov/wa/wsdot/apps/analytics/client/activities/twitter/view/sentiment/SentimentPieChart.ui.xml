<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui">
    <ui:style>

        .tabs {
        width: 50%;
        }

        .block{
        display: block;
        padding: 20px;
        }

        .loader {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 25px;
        }
    </ui:style>

    <m:MaterialColumn grid="s12 m6 l4" addStyleNames="{style.tabs}">
        <m:MaterialCard>
            <m:MaterialCardTitle text="Mention Sentiment Analysis" textColor="black" addStyleNames="{style.block}"/>
            <m:MaterialPreLoader ui:field="sentimentLoader" size="BIG" addStyleNames="{style.loader}">
                <m:MaterialSpinner color="blue-only"/>
            </m:MaterialPreLoader>
            <m:MaterialCardContent ui:field="cardContent" addStyleNames="no-padding"/>

            <m:MaterialCardAction>
                <m:MaterialLabel text="Sentiment analysis aims to determine the attitude of a tweet with respect to some topic relating to WSDOT or the overall attitude towards WSDOT as a brand."/>
            </m:MaterialCardAction>
        </m:MaterialCard>

    </m:MaterialColumn>

</ui:UiBinder>