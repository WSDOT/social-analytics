<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>



        .block{
        display: block;
        padding: 20px;
        }

        .overflow {
        overflow: hidden;
        }

        .loader {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 25px;
        }

    </ui:style>
<g:HTMLPanel>
    <m:MaterialRow>
        <m:MaterialColumn grid="s12">
            <m:MaterialTab ui:field="tab" backgroundColor="teal lighten-2" indicatorColor="yellow">

                <m:MaterialTabItem waves="LIGHT" grid="s4">
                    <m:MaterialLink ui:field="likeTab" text="Popular Tweets" href="#best" textColor="white"/>
                </m:MaterialTabItem>
                <m:MaterialTabItem waves="LIGHT" grid="s4">
                    <m:MaterialLink ui:field="retweetTab" text="Unpopular Tweets" href="#worst" textColor="white"/>
                </m:MaterialTabItem>
            </m:MaterialTab>
        </m:MaterialColumn>
        <m:MaterialColumn m:id="best"  grid="s12">
            <m:MaterialLabel ui:field="mostLikesLabel" backgroundColor="teal lighten-2" textColor="white" padding="5" marginTop="10" width="100%" text="Most Likes" fontSize="1.5em"/>
            <g:HTMLPanel ui:field="mostLiked"/>
            <m:MaterialLabel ui:field="mostRetweetsLabel" backgroundColor="teal lighten-2" textColor="white" padding="5" marginTop="10" width="100%"  text="Most Retweets" fontSize="1.5em"/>
            <g:HTMLPanel ui:field="mostRetweet"/>
        </m:MaterialColumn>
        <m:MaterialColumn  m:id="worst" grid="s12">
            <m:MaterialLabel ui:field="leastLikesLabel" backgroundColor="teal lighten-2" textColor="white" padding="5" marginTop="10" width="100%"  text="Least Likes" fontSize="1.5em"/>
            <g:HTMLPanel ui:field="leastLiked"/>
            <m:MaterialLabel ui:field="leastRetweetsLabel" backgroundColor="teal lighten-2" textColor="white" padding="5" marginTop="10" width="100%"  text="Least Retweets" fontSize="1.5em"/>
            <g:HTMLPanel ui:field="leastRetweet"/>
        </m:MaterialColumn>


    </m:MaterialRow>

    <m:MaterialPreLoader ui:field="loader" size="BIG" addStyleNames="{style.loader}" visible="false">
        <m:MaterialSpinner color="blue-only"/>
    </m:MaterialPreLoader>
</g:HTMLPanel>
</ui:UiBinder>