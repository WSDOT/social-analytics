<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m.html="urn:import:gwt.material.design.client.ui.html">

    <ui:style>

        .loader {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 25px;
        }
    </ui:style>

    <g:HTMLPanel>

        <m:MaterialRow backgroundColor="teal lighten-2">
            <m:MaterialColumn grid="s12"> <g:HTMLPanel><m.html:Span textColor="white" addStyleNames="flow-text"> Mentions </m.html:Span> </g:HTMLPanel></m:MaterialColumn>
        </m:MaterialRow>
        <m:MaterialPreLoader ui:field="tweetsLoader" size="BIG" addStyleNames="{style.loader}">
            <m:MaterialSpinner color="blue-only"/>
        </m:MaterialPreLoader>
        <g:HTMLPanel ui:field="tweetsList">

            <g:HTMLPanel ui:field="tweetDetails" />

        </g:HTMLPanel>

    </g:HTMLPanel>


</ui:UiBinder>