<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
>

    <ui:style>

        .loader {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 25px;
        }
    </ui:style>


    <g:HTMLPanel>
        <g:HTMLPanel ui:field="tweetsList">
            <g:HTMLPanel ui:field="tweetDetails" />
        </g:HTMLPanel>
        <m:MaterialButton ui:field="moreTweetsBtn" text="more" waves="LIGHT" backgroundColor="teal lighten-2" textColor="white" visible="false"/>
        <m:MaterialPreLoader ui:field="tweetsLoader" size="BIG" addStyleNames="{style.loader}">
            <m:MaterialSpinner color="blue-only"/>
        </m:MaterialPreLoader>
    </g:HTMLPanel>


</ui:UiBinder>